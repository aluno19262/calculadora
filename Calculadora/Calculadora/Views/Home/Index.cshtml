
@{
    ViewBag.Title = "Calculadora";
}

<h2>A minha calculadora</h2>

@*inicio da calculadora*@
@*<form></form>*@
@using (Html.BeginForm())
{
    //criar a tabela com os botoes da calculadora

<table>

    <tr>
        <td colspan="5">
            <input type="text" readonly="readonly" name="visor" value="@ViewBag.Resposta" />
        </td>
    </tr>

    <tr>
        <td>
            <input type="submit" name="bt" value="7" />
        </td>
        <td>
            <input type="submit" name="bt" value="8" />
        </td>
        <td>
            <input type="submit" name="bt" value="9"/>
        </td>
        <td>
            <input type="submit" name="bt" value=":"/>
        </td>
        <td>
            <input type="submit" name="bt" value="+/-"/>
        </td>
    </tr>
    <tr>
        <td>
            <input type="submit" name="bt" value="4"/>
        </td>
        <td>
            <input type="submit" name="bt" value="5"/>
        </td>
        <td>
            <input type="submit" name="bt" value="6"/>
        </td>
        <td>
            <input type="submit" name="bt" value="x"/>
        </td>
        <td>
            <input type="submit" name="bt" value="C" class="btn btn-danger"/>
        </td>
    </tr>
    <tr>
        <td>
            <input type="submit" name="bt" value="1"/>
        </td>
        <td>
            <input type="submit" name="bt" value="2"/>
        </td>
        <td>
            <input type="submit" name="bt" value="3"/>
        </td>
        <td>
            <input type="submit" name="bt" value="-"/>
        </td>
        <td>
            <input rowspan="2" type="submit" name="bt" value="="/>
        </td>
    </tr>
    <tr>
        <td>
            <input colspan="2" type="submit" name="bt" value="0"/>
        </td>
        <td>
            <input type="submit" name="bt" value=","/>
        </td>
        <td>
            <input type="submit" name="bt" value="+"/>
        </td>

    </tr>

</table>
}